[tool.poetry]
name = "{{pipeline_name}}"
version = "0.0.1"
description = "{{pipeline_desc}}"
authors = ["{{author}} <{{author_email}}>"]
readme = "README.md"
license = "MIT"

[tool.poetry.dependencies]
python = "^3.7.1"
pipen = "^0.7"
pipen-filters = "^0.6"
pipen-verbose = "^0.5"
pipen-args = "^0.8"
{% if report -%}
pipen-report = "^0.8"
{%- endif %}

[tool.poetry.dev-dependencies]

{% if console_script %}
[tool.poetry.scripts]
{{pipeline_name}} = "{{pipeline_name}}.main:main"
{% endif %}

[build-system]
requires = ["poetry-core>=1.0.0"]
build-backend = "poetry.core.masonry.api"

[tool.black]
line-length = 80
target-version = ['py37', 'py38', 'py39', 'py310']
include = '\.pyi?$'
